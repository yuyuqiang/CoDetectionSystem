<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/defind_zuo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/zuo3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="15dp"
            android:text="添加车辆"
            android:textColor="#191717"
            android:textSize="22dp" />

        <ImageView
            android:id="@+id/baocun"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="106dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/baocun" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="车牌号"
            android:textColor="#0d0c0c"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/de_foodname"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_marginLeft="135dp"
            android:layout_gravity="center"
            android:background="@drawable/shape6_setting"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcb8b8"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="车主信息"
            android:textSize="16dp"
            android:textColor="#0d0c0c"
            android:gravity="left|center"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:text="请输入对应车主相关信息"
            android:textSize="13dp"
            android:textColor="#767373"
            android:gravity="left|center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="16dp"
                android:textColor="#0d0c0c"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/de_heat"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="15dp"
                android:layout_marginLeft="135dp"
                android:layout_gravity="center"
                android:background="@drawable/shape6_setting"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bcb8b8"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcb8b8"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="性别"
            android:textColor="#0d0c0c"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/de_protein"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_marginLeft="135dp"
            android:layout_gravity="center"
            android:background="@drawable/shape6_setting"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcb8b8"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="电话号"
            android:textColor="#0d0c0c"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/de_fat"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="15dp"
            android:layout_marginLeft="135dp"
            android:layout_gravity="center|right"
            android:background="@drawable/shape6_setting"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bcb8b8"
        />

</LinearLayout>
